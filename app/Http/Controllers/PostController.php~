     * @param  \Illuminate\Http\Request  $request
     * @return \Illuminate\Http\Response
     */
    public function store(Post $postModel, Request $request)
    {
        $title = $request->input('title');
        $postModel->create($request->all());
        
        return redirect('/');
    }

